{
  "compilerOptions": {
    "sourceMap": false,
    "esModuleInterop": true,
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "baseUrl": ".",
    "removeComments": true,
    "diagnostics": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "outDir": "./built"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}